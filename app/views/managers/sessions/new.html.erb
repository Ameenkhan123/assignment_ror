 <div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign In</h5>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name),class: "form-signin") do |f| %>
            <div class="form-label-group">
              <%= f.email_field :email, id: "inputemail", class: "form-control", placeholder: "Email" %>
              <label for="inputemail">Email</label>
            </div>
            <div class="form-label-group">
              <%= f.password_field :password, autocomplete: "current-password", id: "inputPassword", class: "form-control", placeholder: "Password" %>
              <label for="inputPassword">Password</label>
            </div>
            <div class="custom-control custom-checkbox mb-3">
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheck1" %>
                  <%= f.label :remember_me, class: "custom-control-label", for: "customCheck1" %>
                </div>
              <% end %>
            </div>
            <%= f.submit "Sign in", class: "btn btn-lg btn-primary btn-block text-uppercase" %>
            <hr class="my-4">
            <%= render "managers/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
